<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
   <children>
      <TabPane layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="780.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Data Pelanggan">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                 <children>
                    <Label layoutX="20.0" layoutY="24.0" text="Nama" /> 
                    <TextField fx:id="txtPelangganNama" layoutX="100.0" layoutY="20.0" prefWidth="300.0" promptText="Nama Lengkap" />
                    
                    <Label layoutX="20.0" layoutY="64.0" text="Email" /> 
                    <TextField fx:id="txtPelangganEmail" layoutX="100.0" layoutY="60.0" prefWidth="300.0" promptText="Email" />
                    
                    <Label layoutX="20.0" layoutY="104.0" text="Telepon" /> 
                    <TextField fx:id="txtPelangganTelepon" layoutX="100.0" layoutY="100.0" prefWidth="300.0" promptText="08xxxxxxxxxx" />
                    
                    <HBox layoutX="100.0" layoutY="140.0" spacing="10.0">
                       <children>
                          <Button mnemonicParsing="false" onAction="#handleTambahPelanggan" prefWidth="70.0" text="Add" />
                          <Button mnemonicParsing="false" onAction="#handleEditPelanggan" prefWidth="70.0" text="Edit" />
                          <Button mnemonicParsing="false" onAction="#handleHapusPelanggan" prefWidth="70.0" text="Delete" />
                       </children>
                    </HBox>
                    
                    <TableView fx:id="tablePelanggan" layoutX="20.0" layoutY="180.0" prefHeight="350.0" prefWidth="740.0">
                      <columns>
                        <TableColumn fx:id="colPelangganNama" prefWidth="250.0" text="Nama" />
                        <TableColumn fx:id="colPelangganEmail" prefWidth="250.0" text="Email" />
                        <TableColumn fx:id="colPelangganTelp" prefWidth="200.0" text="Telepon" />
                      </columns>
                    </TableView>
                 </children>
              </AnchorPane>
            </content>
          </Tab>
          
          <Tab text="Data Buku">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                 <children>
                    <Label layoutX="20.0" layoutY="24.0" text="Judul" /> 
                    <TextField fx:id="txtBukuJudul" layoutX="100.0" layoutY="20.0" prefWidth="300.0" promptText="Judul Buku" />
                    
                    <Label layoutX="20.0" layoutY="64.0" text="Penulis" /> 
                    <TextField fx:id="txtBukuPenulis" layoutX="100.0" layoutY="60.0" prefWidth="300.0" promptText="Nama Penulis" />
                    
                    <Label layoutX="20.0" layoutY="104.0" text="Harga" /> 
                    <TextField fx:id="txtBukuHarga" layoutX="100.0" layoutY="100.0" prefWidth="300.0" promptText="Contoh: 50000" />
                    
                    <Label layoutX="20.0" layoutY="144.0" text="Stok" /> 
                    <TextField fx:id="txtBukuStok" layoutX="100.0" layoutY="140.0" prefWidth="300.0" promptText="Contoh: 10" />
                    
                    <HBox layoutX="100.0" layoutY="180.0" spacing="10.0">
                       <children>
                          <Button mnemonicParsing="false" onAction="#handleTambahBuku" prefWidth="70.0" text="Add" />
                          <Button mnemonicParsing="false" onAction="#handleEditBuku" prefWidth="70.0" text="Edit" />
                          <Button mnemonicParsing="false" onAction="#handleHapusBuku" prefWidth="70.0" text="Delete" />
                       </children>
                    </HBox>
                    
                    <TableView fx:id="tableBuku" layoutX="20.0" layoutY="220.0" prefHeight="310.0" prefWidth="740.0">
                      <columns>
                        <TableColumn fx:id="colBukuJudul" prefWidth="250.0" text="Judul" />
                        <TableColumn fx:id="colBukuPenulis" prefWidth="200.0" text="Penulis" />
                        <TableColumn fx:id="colBukuHarga" prefWidth="150.0" text="Harga" />
                        <TableColumn fx:id="colBukuStok" prefWidth="100.0" text="Stok" />
                      </columns>
                    </TableView>
                 </children>
              </AnchorPane>
            </content>
          </Tab>
          
          <Tab text="Data Penjualan">
             <content>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                   <children>
                      <Label layoutX="20.0" layoutY="24.0" text="Pelanggan" /> 
                      <ComboBox fx:id="cbJualPelanggan" layoutX="100.0" layoutY="20.0" prefWidth="300.0" promptText="-- Pilih Pelanggan --" />
                      
                      <Label layoutX="20.0" layoutY="64.0" text="Buku" /> 
                      <ComboBox fx:id="cbJualBuku" layoutX="100.0" layoutY="60.0" prefWidth="300.0" promptText="-- Pilih Buku --" />
                      
                      <Label layoutX="20.0" layoutY="104.0" text="Jumlah" /> 
                      <TextField fx:id="txtJualJumlah" layoutX="100.0" layoutY="100.0" prefWidth="300.0" promptText="Jumlah Beli" />
                      
                      <Label layoutX="20.0" layoutY="144.0" text="Tanggal" /> 
                      <DatePicker fx:id="dateJualTanggal" layoutX="100.0" layoutY="140.0" prefWidth="300.0" promptText="Pilih Tanggal" />
                      
                      <Button layoutX="100.0" layoutY="180.0" mnemonicParsing="false" onAction="#handleTambahTransaksi" text="Simpan Transaksi" />
                      
                      <TableView fx:id="tablePenjualan" layoutX="20.0" layoutY="220.0" prefHeight="310.0" prefWidth="740.0">
                        <columns>
                          <TableColumn fx:id="colJualTanggal" prefWidth="150.0" text="Tanggal" />
                          <TableColumn fx:id="colJualPelanggan" prefWidth="200.0" text="Pelanggan" />
                          <TableColumn fx:id="colJualBuku" prefWidth="200.0" text="Buku" />
                          <TableColumn fx:id="colJualTotal" prefWidth="150.0" text="Total Harga" />
                        </columns>
                      </TableView>
                   </children>
                </AnchorPane>
             </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>